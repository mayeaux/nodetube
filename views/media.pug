                        //p.fw(style="text-align: left;margin: 0 auto;white-space:pre-line;word-wrap:break-word;min-width:240px;")
                        if upload.formattedDuration
                            p.fw
                                | duration: #{upload.formattedDuration}

                        if upload.visibility == 'removed'
