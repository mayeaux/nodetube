                                if upload.rating == 'mature'
                                    if upload.category
                                        each category in categories
                                            if category.name == upload.category
                                                h4.fw(style="font-size:13px;font-weight:lighter;float:right;margin-right:2px;") <b>Category:</b> <a href="/media/popular/1?category=#{category.name}">#{category.displayName}</a>
                                                    p.fw(style="font-size:13px;font-weight:bold;margin-right:2px;font-weight:lighter;") <b>File Size:</b> #{ formattedFileSize }
                                                    p.fw(style="font-size:13px;font-weight:bold;margin-right:2px;font-weight:lighter;margin-top:-10px;")
                                    else
                                        h4.fw(style="font-size:13px;font-weight:lighter;float:right;margin-right:2px;") <b>Rating:</b> Not Safe For Work
                                if upload.rating == 'sensitive'
                                    if upload.category
                                        each category in categories
                                            if category.name == upload.category
                                                h4.fw(style="font-size:13px;font-weight:lighter;float:right;margin-right:2px;") <b>Category:</b> <a href="/media/popular/1?category=#{category.name}">#{category.displayName}</a>
                                                    p.fw(style="font-size:13px;font-weight:bold;margin-right:2px;font-weight:lighter;") <b>File Size:</b> #{ formattedFileSize }
                                                    p.fw(style="font-size:13px;font-weight:bold;margin-right:2px;font-weight:lighter;margin-top:-10px;")
                                    else
                                        h4.fw(style="font-size:13px;font-weight:lighter;float:right;margin-right:2px;") <b>Rating:</b> Sensitive (18+)
                            
                br
                br
                br
                // SHARING BUTTONS
                div(style="float:right;")

                    a(href=`https://www.facebook.com/sharer/sharer.php?u=${url}` target="_blank")
                        img(src='/images/facebook-share.jpg' style="width:30px;")
                    a(href=`https://twitter.com/share?url=${url}` target="_blank")
                        img(src='/images/twitter-share.jpg' style="margin-left:10px;width:30px;")
                    a(href=`mailto:?subject=Check out this ${upload.fileType}&body=Check out this ${upload.fileType} on ${brandName}: ${url}`, title='Share by Email')
                        img(src='/images/email-share.jpg' style="margin-left:10px;width:30px;margin-right:10px;")

                //br
                //button.btn.btn-default.copy-button(style="padding:4px 12px" data-clipboard-text=`${upload.title} \n\n${url}`)
                    i.fa.fa-info.fw
                    | Copy Details

                //button.btn.btn-default.copy-button(style="padding:4px 12px" data-clipboard-text=`${upload.title} by ${upload.uploader.channelName || upload.uploader.channelUrl} \n\n ${url} \n\n #${brandName}`)
                    i.fa.fa-info.fw
                    | With User Info

            div(style="margin-right:10px;text-align:right;" id="suggested" class="column")
                if upload.category
                    each category in categories
                        if category.name == upload.category
                            // iframe(style="height:600px;width:550px;border:none;padding-top:0" src=`/media/suggested/?category=${category.name}` target=_self)
        br
        hr

        // COMMENT SECTION AND FORM
        div(style="ttext-align:center;")
            br
            div.col-md-12
                if user
                    if !viewingUserIsBlocked
                        // comment form
                        div.comment-form.form-group
                                form.form-horizontal.overall-comment-form(class="comment-form" action='/api/comment', method='post')
                                    input(type='hidden', name='_csrf', value=_csrf)
                                    label.fw(for="comment" style="font-size:20px;") comments
                                    br
                                    input(type="hidden" name="upload" id="upload" value=upload._id)
                                    textarea.fw(name="comment" id="comment" minlength="2" style="width:400px;max-width:100%" placeholder="write a comment")
